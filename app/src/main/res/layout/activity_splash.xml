<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animated_background_modern"
    tools:context=".SplashActivity">

    <!-- Floating animated elements -->
    <View
        android:id="@+id/floatingElement1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/floating_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/floatingElement2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/floating_square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/floatingElement3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/floating_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo with modern animation -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/zylogi_icon"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/sloganText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Slogan text with typewriter effect and modern gradient -->
    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="transparÃªncia em movimento"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="48dp"
        android:indeterminateTint="@android:color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>