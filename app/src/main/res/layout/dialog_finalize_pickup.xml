<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Coleta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- ID da Coleta -->
    <TextView
        android:id="@+id/textViewPickupIdDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🆔 ID: #12345"
        android:textSize="14sp"
        android:textColor="#666666"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Label Ocorrência -->
    <TextView
        android:id="@+id/labelOccurrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ocorrência"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Spinner de Ocorrência -->
    <Spinner
        android:id="@+id/spinnerOccurrence"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:padding="12dp" />

    <!-- Label Quantidade de Itens -->
    <TextView
        android:id="@+id/labelQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qt. Items coletados"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Campo de Quantidade de Itens -->
    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Digite a quantidade de itens coletados"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Label Observação -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Observação"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Campo de Observação -->
    <EditText
        android:id="@+id/editTextObservation"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Detalhes sobre a finalização da coleta..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Seção de Foto -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto (Opcional)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Botões de Foto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📷 Câmera"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🖼️ Galeria"
            android:textColor="#FFFFFF"
            android:background="#FF9800"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Status da Foto -->
    <TextView
        android:id="@+id/textViewPhotoStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhuma foto selecionada"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Botão Cancelar -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#666666"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp"
            android:minWidth="100dp" />

        <!-- Botão Finalizar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFinalize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar Coleta"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4CAF50"
            android:minWidth="140dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>