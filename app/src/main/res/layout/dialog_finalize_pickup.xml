    <!-- Campo de ObservaÃ§Ã£o -->
    <EditText
        android:id="@+id/editTextObservation"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Detalhes sobre a finalizaÃ§Ã£o da coleta..."
