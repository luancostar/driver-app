<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Forçando tema claro sempre -->
    <style name="Base.Theme.ZylogiMotoristas" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cores personalizadas do Zylogi -->
        <item name="colorPrimary">@color/zylogi_brand_blue</item>
        <item name="colorPrimaryVariant">@color/zylogi_dark_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/zylogi_light_blue</item>
        <item name="colorOnSecondary">@color/zylogi_dark_blue</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@color/zylogi_dark_blue</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/zylogi_dark_blue</item>
        <!-- Forçar cores da status bar e navigation bar -->
        <item name="android:statusBarColor">@color/zylogi_brand_blue</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.ZylogiMotoristas" parent="Base.Theme.ZylogiMotoristas" />
    
    <!-- Tema personalizado para a SplashActivity -->
    <style name="Theme.ZylogiMotoristas.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/zylogi_brand_blue</item>
        <item name="android:statusBarColor">@color/zylogi_brand_blue</item>
        <item name="android:navigationBarColor">@color/zylogi_brand_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>